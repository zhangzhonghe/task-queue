<view class="content">
  <textarea wx:if="{{isInputVisible}}" class="textarea-x" placeholder="请输入任务内容..." value="{{inputValue}}" bindconfirm="addTask" bindinput="handleInput"></textarea>
  <text wx:elif="{{currentTask}}">{{currentTask}}</text>
  <text wx:else class="nothing">暂无任务</text>
</view>
<view wx:if="{{isInputVisible}}" class="btn-group">
  <button class="btn" type="primary" bindtap="addTask">确定添加</button>
</view>
<view wx:else class="btn-group">
  <button class="btn" type="primary" bindtap="showInput">添加</button>
  <button wx:if="{{currentTask}}" class="btn" bindtap="completeTask">完成</button>
</view>