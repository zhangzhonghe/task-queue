.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #333;
  font-size: 24px;
  height: 70vh;
  background-color: #fff;
  margin: 20rpx;
  border-radius: var(--rounded-sm);
  padding: 30rpx;
}

.nothing {
  color: #999;
}

.btn-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #fff;
}

.btn {
  line-height: 1.75em;
  flex: 1;
}

.textarea-x {
  width: 100%;
  height: 100%;
}

.duration {
  font-size: 16px;
  color: #aaa;
  line-height: 2;
}

.unactive {
  color: #aaa;
}