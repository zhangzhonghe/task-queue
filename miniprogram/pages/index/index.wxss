.content {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  font-size: 24px;
  height: 70vh;
  background-color: #fff;
  margin: 20rpx;
  border-radius: var(--rounded-xl);
  padding: 30rpx;
}

.nothing {
  color: #999;
}

.btn-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 10rpx;
  background-color: #fff;
}

.btn {
  flex: 1;
}

.textarea-x {
  width: 100%;
  height: 100%;
}